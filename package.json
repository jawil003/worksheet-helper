{
  "name": "worksheet-helper",
  "description": "A helper for worksheet creation",
  "version": "0.1.0",
  "main": "public/electron.js",
  "author": "Jannik Will",
  "private": true,
  "homepage": "./",
  "build": {
    "appId": "org.will.worksheet-helper",
    "productName": "Worksheet Helper",
    "artifactName": "worksheet-helper-${version}.${ext}",
    "copyright": "Copyright Â© 2022 Jannik Will",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      "github"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.png"
    },
    "win": {
      "icon": "build/icon.png"
    },
    "linux": {
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "@heroicons/react": "^1.0.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0",
    "eslint-loader": "^4.0.2",
    "exceljs": "^4.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-scripts": "5.0.0",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"BROWSER=none npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "package:mac": "electron-builder build --mac -c.extraMetadata.main=build/electron.js --publish never",
    "package:win": "electron-builder build --win -c.extraMetadata.main=build/electron.js --publish never",
    "package:linux": "electron-builder build --l -c.extraMetadata.main=build/electron.js --publish never",
    "package:all": "electron-builder build --mac --win --l -c.extraMetadata.main=build/electron.js --publish never",
    "publish": "export $(cat .env | xargs) && electron-builder build --mac --win --l -c.extraMetadata.main=build/electron.js --publish always",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@types/react-helmet": "^6.1.5",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "craco": "^0.0.3",
    "cross-env": "^7.0.3",
    "electron": "^17.0.1",
    "electron-builder": "^22.14.13",
    "postcss": "^8.4.6",
    "robocopy": "^0.1.16",
    "tailwindcss": "^3.0.23",
    "wait-on": "^6.0.1"
  }
}
